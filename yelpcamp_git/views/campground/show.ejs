<%- include ("../partials/header") %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">
				Yelp Camp
			</p>
			<div class="list-group">
				<li class="list-group-item active">Info1</li>
				<li class="list-group-item">Info2</li>
				<li class="list-group-item">Info3</li>
				<li class="list-group-item">Info4</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				
<img class="img-responsive" src="<%=campground.image%>">
				<div class="caption-full">
					<h4 class="pull-right">
						$9.00/night
					</h4>
					<h4>
					<a><%= campground.name %></a>
					</h4>
					<P>
						<%=campground.discription%>
					</P>
					<p>
						<em>Submitted by:<%=campground.author.username%></em>
					</p>
					
					<% if(currentUser && campground.author.id.equals(currentUser._id)){%>
						  <a class="btn btn-warning" href="/campground/<%=campground._id%>/edit">EDIT CAMPGROUND</a>
					<form id="deleteform" action="/campground/<%=campground._id%>?_method=DELETE" method="POST">
						<button class="btn btn-danger">
							DELETE
						</button>
					</form>
						<%  }  %>
					
				</div>
			</div>
			
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success"href="/campground/<%=campground._id%>/comments/new">Add New Comment</a>
				</div>
				<hr>
				<% campground.comments.forEach(function(comment){  %>
				<div class="row">
					<div class="col-md-12">
						<strong><%=comment.author.username%></strong>
						<span class="pull-right">10 days ago</span>
							<p> <%=comment.text%>
				</p>
						<% if(currentUser && comment.author.id.equals(currentUser._id)){%>
								<a class="btn btn-warning" href="/campground/<%=campground._id%>/comments/<%=comment._id%>/edit">EDIT</a>
				<form id="deleteform" action="/campground/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
					<input  type="submit" class="btn btn-danger" value="Delete">
					
						</form>
						<%}%>
					</div>
				</div>
				
			
				<% })%>
			</div>
		</div>
	</div>
</div>




<%- include ("../partials/footer") %>